<view class="tabs">
  <view class="tab">
    <text class="{{type === 2 ? 'active' : ''}}" bind:tap="handleTab" data-type="{{2}}">支出</text>
    <text class="{{type === 1 ? 'active' : ''}}" bind:tap="handleTab" data-type="{{1}}">收入</text>
  </view>
</view>

<view class="body">
  <view class="icon-list">
    <view class="icon" wx:for="{{acctTypes}}" wx:for-item="acctType" wx:key="id" 
    bind:tap="handleTab2" data-id="{{acctType.id}}">
      <text class="iconfont icon-{{acctType.icon}} {{selectedId === acctType.id ? 'active' : ''}}"></text>
      <text class="name">{{acctType.iconName}}</text>
    </view>
  </view>
</view>