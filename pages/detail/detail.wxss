/* 收支看板 */
.card {
    margin: 24rpx auto;
    width: 654rpx;
    height: 384rpx;
    box-sizing: border-box;
    background: #0AB27D;
    border-radius: 32rpx;
    display: flex;
    justify-content: space-between;
    color: #fff;
}

.card .left {
    padding: 48rpx 0 0 48rpx;
    display: flex;
    flex-direction: column;
}

.card .left .expenditure {
    font-size: 28rpx;
}

.card .left .expenditure-total {
    margin-top: 16rpx;
    font-size: 64rpx;
    font-weight: 700;
}

.card .left .income {
    margin-top: 40rpx;
    font-size: 28rpx;
    font-weight: 700;
}

.card .left .income-total {
    margin-top: 16rpx;
    font-size: 44rpx;
}

.card .right {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.card .right .month-tag {
    align-self: flex-end;
    margin: 48rpx 48rpx 0 0;
    width: 96rpx;
    height: 96rpx;
    background-color: #fff;
    border-radius: 50%;
    color: #0AB27D;
    display: flex;
    justify-content: center;
    align-items: center;
}

.card .right .month-tag .month-number {
    font-size: 68rpx;
    font-weight: 500;
}

.card .right .month-tag .month-text {
    font-size: 20rpx;
    align-self: flex-end;
    margin-bottom: 20rpx;
}

.card .right .ledger {
    margin: 0 48rpx 48rpx 0;
    color: #fff;
    font-size: 28rpx;
    font-weight: 500;
}

.card .right .ledger .ledger-name {
    padding: 18rpx 20rpx;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 38rpx;
}

/* 明细列表 */
.detail-list {}

.detail-list .detail-item .detail-item-header {
    display: flex;
    justify-content: space-between;
    font-size: 24rpx;
    color: #B8B8B8;
    padding: 0 48rpx 12rpx;
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.detail-list .detail-item .detail-item-header .income_and_expenditure {
    display: flex;
}

.detail-list .detail-item .detail-item-header .income_and_expenditure text:nth-child(n+2) {
    margin-left: 32rpx;
}

.detail-list .detail-item .detail-item-body {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 0 48rpx;
    padding: 12rpx 0;
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
    color: #121212;
    font-size: 32rpx;
}

.detail-list .detail-item .detail-item-body .icon {
    display: flex;
    align-items: center;
}

.detail-list .detail-item .detail-item-body .icon .icon-gouwuche {
    display: inline-block;
    font-size: 48rpx;
    background-color: #f5f5f5;
    color: #0AB27D;
    box-sizing: border-box;
    padding: 16rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.detail-list .detail-item .detail-item-body:last-child {
    border-bottom: none;
}